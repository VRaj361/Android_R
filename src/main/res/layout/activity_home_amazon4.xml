<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_amazon4"
    android:orientation="vertical"
    android:weightSum="5.5"
    android:background="#7EB6F1EB"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:background="@drawable/amazon_back_home_color"
        >
        <ImageView
            android:layout_width="0dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            android:layout_height="match_parent"
            android:src="@drawable/amazon_icon"
            android:layout_weight="1"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/teal_200"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="5"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7"
            android:text="Thanks For Shopping.."
            android:textColor="@color/black"
            android:textSize="30sp"
            android:gravity="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:text="Exit"
            android:onClick="alert_btn"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="1) Iphone 13 Pro Max"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/rating_iphone_in"
            android:textSize="20sp"
            android:textColor="@color/teal_200"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="2) Airpod (3rd Generation)"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/rating_airpod_in"
            android:textSize="20sp"
            android:textColor="@color/teal_200"
            />


    </LinearLayout>

</LinearLayout>