<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/image_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/image_side" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_login"
        android:text="Login"
        android:textStyle="bold"
        android:layout_below="@+id/image_side"
        android:layout_marginLeft="30dp"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="#000"

        />

    <TextView
        android:id="@+id/below_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_login"
        android:text="Sign up"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/below_main"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFD"
        android:elevation="30dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_email_24"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:singleLine="true"
        android:textColorHint="@color/black" />


    <EditText
        android:id="@+id/pass_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_email"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFD"
        android:drawableLeft="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:elevation="30dp"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:padding="5dp"
        android:password="true"
        android:singleLine="true"

        android:textColorHint="@color/black"

        />

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_password"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_gra"
        android:drawableRight="@drawable/ic_arrow_forward_ios_24"
        android:drawablePadding="20dp"
        android:paddingHorizontal="30dp"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="18sp"
        android:id="@+id/btn_login"/>




