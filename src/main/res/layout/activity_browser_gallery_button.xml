        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list Grid view"
        android:textAllCaps="false"
        android:id="@+id/list_grid_btn"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="webview"
        android:textAllCaps="false"
        android:id="@+id/webview_btn"

        /> <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="video view"
        android:textAllCaps="false"
        android:id="@+id/videoview_btn"

        /><Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom ListView"
        android:textAllCaps="false"
        android:id="@+id/customlistview_btn"

        /><Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom GridView"
