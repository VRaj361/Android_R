    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Button"
        android:textAllCaps="false"
        android:id="@+id/upload_btn"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camara "
        android:textAllCaps="false"
        android:id="@+id/camara_btn"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image  "
        android:textAllCaps="false"
        android:id="@+id/image_btn"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seek Rating Bar"
        android:textAllCaps="false"
        android:id="@+id/seek_rating_bar"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Button"
        android:onClick="alert_btn"
        android:textAllCaps="false"
        android:id="@+id/alert_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
