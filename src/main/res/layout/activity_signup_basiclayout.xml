<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/main_welcome_txt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup into your account"
        android:layout_below="@id/main_welcome_txt"
        android:layout_marginHorizontal="40dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/sigup_basic_upper"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/design_upperid"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@id/sigup_basic_upper"
        android:layout_marginTop="20dp"
        android:src="@drawable/image_get"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/white"
        />

    <RelativeLayout
        android:id="@+id/inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sigup_basic_upper"

        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/inner_color"
        android:paddingHorizontal="30dp"

        >

        <TextView
            android:id="@+id/main_inner_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"

            />


        <EditText
            android:id="@+id/inner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_inner_txt"
            android:layout_marginTop="52dp"
            android:background="@drawable/inner_txt_all"
            android:drawableLeft="@drawable/name_inner"
            android:drawablePadding="5dp"
            android:hint="FirstName"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="15dp"

            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/inner_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inner_name"
            android:layout_marginTop="30dp"
            android:background="@drawable/inner_txt_all"
            android:drawableLeft="@drawable/email_inner"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"

            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/inner_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inner_email"
            android:layout_marginTop="30dp"
            android:background="@drawable/inner_txt_all"
            android:drawableLeft="@drawable/lock_inner"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <CheckBox
            android:id="@+id/inner_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inner_pass"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:buttonTint="@color/white"
            android:checked="true"
            android:text="Remember Me"
            android:textColor="@color/white" />


        <android.widget.Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inner_checkbox"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/inner_button"
            android:imeOptions="actionNext"
            android:text="Sign Up"
            android:textAllCaps="false" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inner"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:id="@+id/outer_txt"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/outer_txt"
            android:text="Log In"
            android:textColor="#31D37D"
            android:textStyle="bold"
            android:paddingHorizontal="5dp"
            />

    </RelativeLayout>

